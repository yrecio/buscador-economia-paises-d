/*--------------- Generales ---------------*/

html {
	font-size: 16px;
}

body {
	width: 100%;
	height: auto;
	font-family: 'Source Sans Pro', Arial,sans-serif;
	font-weight: Bold;
	margin: 0;
	position: absolute;
}

@media (max-width: 400px){
	html{
		font-size: 10px;
	}
	
}

/*--------------- Buscador: generalidades ---------------*/

section {
	width: 100%;
	height: auto;
	display:block;
}

header {
	width: 100%;
	text-align: center;
	color: #00bcd4;
	font-family: 'Merriweather', serif;
}

a{
	text-align: left;
	color: #00bcd4;
	text-decoration: none;
}

a:hover{
  transform: scale(1.02);
  color: #007d8d;
}

a:active{
  color: #007d8d;
}

/*--------------- Pestañas superiores del buscador ---------------*/

#desplegable{
	width: 100%;
	height: 2.2rem;
	display: flex;
	justify-content: center;
}

.pestana{
	width: 100%;
	background-color: #00bcd4;
	color: white;
	text-align: center;
	border: 0.001rem white solid;
	padding: 0.5rem 0rem 0.5rem 0rem;
	cursor: pointer;
	transition: 100ms linear;
}

.pestana:hover{
	background-color: #f5f9fb;
	color: #00bcd4;
}

#pestana-paises{
	width: 100%;
}

#pestana-grpaises{
	width: 100%;
}

#pestana-mundo{
	width: 100%;
}

/*--------------- Contenido de la pestaña ---------------*/

#contenido-pestana{
	width: 100%;
	display: block;
	margin-left: auto;
	margin-right: auto;
	border: 0.001rem white solid;
}

.contenido{
	width: 100%;
	height: 12.5rem;
	background-color: #f5f9fb;
}

/*--------------- Pestaña de paises ---------------*/

#contenido-paises{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: space-around;
	flex-wrap: wrap;
	text-align: left;
}

.pais{
	width: 30%;
	display: inline-flex;
	line-height: 1.2rem;
	justify-content: left;
	align-items: center;
}

.bandera{
	width: 1.9rem;
	height: 1.5rem;
	margin-right: 0.6rem;
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	border: !important;
}



/*--------------- Iconos de las banderas de cada pais ---------------*/

#argentina{
	background-image: url(../iconos/argentina.svg);
}

#brasil{
	background-image: url(../iconos/brasil.svg);
}

#chile{
	background-image: url(../iconos/chile.svg);
}

#ecuador{
	background-image: url(../iconos/ecuador.svg);
}

#espana{
	background-image: url(../iconos/espana.svg);
}

#eeuu{
	background-image: url(../iconos/eeuu.svg);
}

#mexico{
	background-image: url(../iconos/mexico.svg);
}

#peru{
	background-image: url(../iconos/peru.svg);
}

#reinounido{
	background-image: url(../iconos/reinounido.svg);
}

/*--------------- Contenido de la parte de grupo de paises ---------------*/

#contenido-grpaises{
	width: 100%;
	display: flex;
	justify-content: center;
	text-align: left;
	align-items: center;
	display: none;
}

#contenido-grpaises:active{
	width: 100%;
	display: flex;
	justify-content: center;
	text-align: left;
	align-items: center;
	display: none;
}
/*--------------- Iconos de las banderas de cada grupo de países ---------------*/

#ue{
	background-image: url(../iconos/ue.svg);
}

/*--------------- Contenido de la parte de la economía mundial ---------------*/

#contenido-mundo{
	width: 100%;
	display: flex;
	justify-content: center;
	text-align: left;
	align-items: center;
	display: none;
}

/*--------------- Iconos de las banderas de cada grupo de países ---------------*/

#previsiones-mundo{
	width: 2rem;
	height: 2rem;
}